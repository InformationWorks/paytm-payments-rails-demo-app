<div style="margin-bottom: 15px;">

<h3 style="margin-bottom: 30px; margin-top: -10px;">
  Checkout
</h3>

<%= form_tag proceed_to_pay_path do %>

  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">ORDER_ID</label>
    <div class="col-sm-10">
      <input type="text" name="ORDER_ID" class="form-control form-control-sm" id="colFormLabelSm" placeholder="Enter Order Id" value="ORDER<%= Time.now.to_i %>" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">CUST_ID</label>
    <div class="col-sm-10">
      <input type="text" name="CUST_ID" class="form-control form-control-sm" id="colFormLabelSm" placeholder="Enter User Id" value="1" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">TXN_AMOUNT</label>
    <div class="col-sm-10">
      <input type="number" name="TXN_AMOUNT" class="form-control form-control-sm" id="colFormLabelSm" placeholder="Enter Transaction Amount" value="1" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">MOBILE_NO</label>
    <div class="col-sm-10">
      <input type="tel" name="MOBILE_NO" class="form-control form-control-sm" id="colFormLabelSm" placeholder="Enter Mobile Number" value="7777777777">
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">EMAIL</label>
    <div class="col-sm-10">
      <input type="email" name="EMAIL" class="form-control form-control-sm" id="colFormLabelSm" placeholder="Enter Email" value="test@paywithpaytm.com">
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">ENVIRONMENT</label>
    <div class="col-sm-10">
      <div class="form-check form-check-inline">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="payment_environment" id="inlineRadio1" value="staging" checked> Staging
        </label>
      </div>
      <div class="form-check form-check-inline">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="payment_environment" id="inlineRadio2" value="production"> Production
        </label>
      </div>
    </div>
  </div>

  <hr>


  <div style="height: 40px;">
    <button type="submit" class="btn btn-success float-right">Proceed to Pay</button>
  </div>

<% end %>

</div>